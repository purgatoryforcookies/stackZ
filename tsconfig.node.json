{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main/*/*/*",
    "src/main/*/*",
    "src/types.ts",
    "src/renderer/src/service/TerminalUIEngine.ts"
  ],
  "exclude": [
    "**/*.test.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noEmit": true,
    "types": [
      "electron-vite/node",
      "jest",
    ]
  }
}