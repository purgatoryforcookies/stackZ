{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main",
    "src/types.ts"
  ],
  "exclude": [
    "src/renderer/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": [
      "electron-vite/node",
      "jest",
      "./src/preload",
    ]
  }
}