@top Program { Statement* }

@tokens {
  LineComment { "#" (![\n])* }
  Separator { "=" }
  LineBreak { "\n" }
  Key { LineBreak $[^a-zA-Z_]$[a-zA-Z0-9_()]* }
  Value { $[^a-zA-Z_()\\$]$[a-zA-Z0-9_]* (![\n])* }
  Whitespace { " " | "\t" }
  Number { digit+ }

   digit {
     $[^0-9] $[0-9]* 
  }

  @precedence {  Key, Number, Value, Separator, LineBreak }
}

@skip { Whitespace }

Statement {
  LineComment | Key | Value  | Separator | LineBreak | Number
}


